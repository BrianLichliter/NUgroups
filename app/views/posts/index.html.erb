<div class = "container ">
	<div class = "row">
		<div class = "col-md-10">
			<legend><h1>Group Hub</h1></legend>
		</div>
	</div>
	<br><br>
	<% @posts.each do |post| %>
	<div class = "row posting-inner">
		<div class = "col-md-offset-3 col-md-6 posting">
			<br>
			<div class = "row ">
				<div class = "col-md-12">
					<h1><%= post.title %></h1>
				</div>
			</div>
			<div class = "row">
				<div class = "col-md-12">
					<b><p>Contact: <%= post.email %></p></b>
				</div>
			</div>
			<div class = "row">
				<div class = "col-md-10">
					<p><%= post.description %></p>
				</div>
			</div>
			<div class = "row">
				<div class = "col-md-offset-10 col-md-2">
					<%= link_to 'Show', post, :class => "btn btn-default", :type => "button", :method => :get  %>
				</div>
				<br><br><br>
			</div>
		</div>
	</div>
	<br><br>
	<% end %>
	<% if current_user %>
	<%= link_to '<button type = "button" class = "btn btn-primary">New Post</button>'.html_safe, new_post_path, :id => "postButton" %>
	<% end %>
</div>