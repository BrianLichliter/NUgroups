<style>
	h2, h3, h4 {
	 	font-family:'Ruluko';
	 }

	 #email {
	 	position: relative;
	 	top: -10px;
	 }

	 #info {
	 	position: static;
	 }
</style>
<div class = "container">
	<div class = "row">
		<div class = "col-md-10">
			<legend><h1>Profile</h1></legend>
		</div>
	</div>
	<div class = "container" id = "info">
		<div class = "row">
			<div class = "col-md-6">
				<h2><%= @user.first_name %> <%= @user.last_name %></h2>
			</div>
		</div> 
		<div class = "row">
			<div class = "col-md-6">
				<h3 id = "email"><%= @user.email %></h3>
			</div>
		</div> 
	</div>
	<br>
	<div class = "container" id = "posts">
		<div class = "container">
			<% @user.posts.each do |post| %>
			<div class = "row posting-inner">
				<div class = "col-md-6 posting">
					<br>
					<div class = "row ">
						<div class = "col-md-12">
							<h1><%= post.title %></h1>
						</div>
					</div>
					<div class = "row">
						<div class = "col-md-12">
							<b><p>Contact: <%= post.email %></p></b>
						</div>
					</div>
					<div class = "row">
						<div class = "col-md-10">
							<i><p>About:</p></i>
							<p><%= post.description %></p>
						</div>
					</div>
					<div class = "row">
						<div class = "col-md-offset-10 col-md-2">
							<%= link_to 'Show', post, :class => "btn btn-default", :type => "button", :method => :get  %>
						</div>
						<br><br><br>
					</div>
				</div>
			</div>
			<br><br>
			<% end %>
		</div>
	</div>
</div> 


<p id="notice"><%= notice %></p>