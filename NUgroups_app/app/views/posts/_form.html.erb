    <![endif]-->
  </head>
  <body>
    <div class = "container">
      <div class = "row" id = "navigation">
        
        
      </div>

      <br>
      <br>           
         <div>
            <div class = "col-md-offset-3 col-md-6">
            <h4 class="modal-title" id="myModalLabel"> Fill in the following form to get other people interested your idea!</h4>
             <br>
             <br>
          </div>
            </div>
              <div class="modal-body">
                <div class = "row">
                  <div class = "col-md-offset-3 col-md-6">
                    <%= f.label :title %><br>
                    <%= f.text_field :title, :class => "form-control" %>
                  </div>
                </div>
                <br>
                <div class = "row">
                  <div class = "col-md-offset-3 col-md-6">
                    <%= f.label :description %><br>
                    <%= f.text_field :description, :class => "form-control" %>
                  </div>
                </div>
               <br>
                <div class = "row">
                  <div class = "col-md-offset-3 col-md-6">
                    <%= f.label :expiration %><br>
                    <%= f.date_select :expiration, :class => "form-control" %>
                  </div>
                </div>
                <br>
                <div class = "row">
                  <div class = "col-md-offset-3 col-md-6">
                    <%= f.label :email %><br>
                     <%= f.text_field :email, :class => "form-control" %>
                  </div>
                </div>
               <br>
                <div class = "row">
                  <div class = "col-md-offset-3 col-md-6">
                    <%= f.label :category %><br>
                    <%= f.text_field :category, :class => "form-control" %>
                  </div>
                </div>
                <br>
                <div class = "row">
                  <div class = "col-md-offset-3 col-md-6">
                    <%= f.label :tags %><br>
                    <%= f.text_field :tags, :class => "form-control" %>
                  </div>
                </div>
              </div>
                <div class = "row">
                <div class = "col-md-offset-3 col-md-6">
                    <div class="modal-footer" id = "submitButtonModal">
                    <%= f.submit 'Create Post!',  :class => 'btn btn-primary' %>
                  </div>
                  </div>
                </div>
                </div>
            </div>
          </div>
        </div>
        </div>
      </div>
    </div>
        </div>
        </div>
      </div>
    </div>
    <div class = "container-fluid" id = "text">
      <div class = "row" id = "about">
        <div class = "col-md-offset-3 col-md-6">
        </div>
      </div>
      <div class = "row" id = "team">
        <div class = "col-md-offset-3 col-md-6">
        </div>
      </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://code.jquery.com/jquery.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="js/bootstrap.min.js"></script>
  </body>
</html>








