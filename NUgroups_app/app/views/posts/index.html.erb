<h1>Group Hub</h1>

<% @posts.each do |post| %>
<div class = "row">
  <div class = "col-md-3">
    <h1><%= post.title %></h1>
  </div>
</div>
<div class = "row">
  <div class = "col-md-10">
    <p><%= post.description %></p>
  </div>
</div>
<div class = "row">
  <div class = "col-md-offset-10 col-md-2">
    <%= link_to 'Show', post, :class => "btn btn-danger" %>
  </div>
</div>
<% end %>

<br>
